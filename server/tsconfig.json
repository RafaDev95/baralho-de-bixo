{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "$/*": ["./*"]
    }
  },
  "include": ["src/**/*", "src/*"],
  "exclude": ["node_modules"]
}
