{
  "name": "baralho-de-bixo-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server/index.ts",
    "test": "bun test --timeout=30000",
    "test:watch": "bun test --watch --timeout=30000",
    "test:coverage": "bun test --coverage --timeout=30000",
    "test:containers": "USE_TESTCONTAINERS=true bun test --timeout=120000",
    "migration:generate": "drizzle-kit generate",
    "migration:run": "drizzle-kit migrate",
    "migrate": "tsx src/db/migrate.ts",
    "migrate2": "node src/db/migrate.ts",
    "schema:push": "drizzle-kit push",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v --remove-orphans",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "build": "rimraf .build  && tsup src/server/index.ts --outDir .build --minify --silent",
    "start": "node .build/index.js"
  },
  "keywords": [],
  "author": "Rafael dos Santos Oliveira",
  "license": "ISC",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.18.3",
    "@scalar/hono-api-reference": "^0.5.168",
    "bcryptjs": "^3.0.3",
    "core-js": "^3.40.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "0.38.0",
    "drizzle-zod": "^0.6.1",
    "email-validator": "^2.0.4",
    "hono": "^4.6.14",
    "hono-pino": "^0.7.0",
    "pg": "^8.13.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.1",
    "stoker": "^1.4.2",
    "uid": "^2.0.2",
    "ws": "^8.18.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.0.3",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "drizzle-kit": "^0.28.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "testcontainers": "^11.0.3",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "packageManager": "bun@1.1.0"
}
