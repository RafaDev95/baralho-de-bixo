{
  "name": "pet-connect-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "migration:generate": "drizzle-kit generate",
    "migration:run": "drizzle-kit migrate",
    "migrate": "tsx src/db/migrate.ts",
    "migrate2": "node src/db/migrate.ts",
    "schema:push": "drizzle-kit push",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v --remove-orphans",
    "lint": "biome check --apply .",
    "format": "biome format --write .",
    "build": "rimraf .build  && tsup src/server/index.ts --outDir .build --minify --silent",
    "start": "node .build/index.js"
  },
  "keywords": [],
  "author": "Rafael dos Santos Oliveira",
  "license": "ISC",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.18.3",
    "@scalar/hono-api-reference": "^0.5.168",
    "core-js": "^3.40.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "0.38.0",
    "drizzle-zod": "^0.6.1",
    "email-validator": "^2.0.4",
    "hono": "^4.6.14",
    "hono-pino": "^0.7.0",
    "pg": "^8.13.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.1",
    "stoker": "^1.4.2",
    "uid": "^2.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/pg": "^8.11.10",
    "@biomejs/biome": "1.5.3",
    "drizzle-kit": "^0.28.1",
    "hono-api-reference": "link:@types/@scalar/hono-api-reference",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
